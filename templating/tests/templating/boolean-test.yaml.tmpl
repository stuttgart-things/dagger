apiVersion: v1
kind: ConfigMap
metadata:
  name: boolean-test-config
  namespace: {{ if .namespace }}{{ .namespace }}{{ else }}default{{ end }}
data:
  # Testing boolean values
  debug: "{{ .debug }}"
  enable_logging: "{{ .enableLogging }}"
  production_mode: "{{ if .productionMode }}{{ .productionMode }}{{ else }}false{{ end }}"

  # Testing conditional logic with booleans
  {{- if .debug }}
  log_level: debug
  {{- else }}
  log_level: info
  {{- end }}
  logging_enabled: "{{ .enableLogging }}"

  # Testing features
  monitoring_enabled: "{{ .monitoring }}"
